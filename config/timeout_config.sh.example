#!/bin/bash
# TruffleHog Timeout and Performance Configuration Template
# Copy this file to timeout_config.sh and customize the values

# Base timeout settings (in seconds)
export TRUFFLEHOG_BASE_TIMEOUT=900          # 15 minutes baseline
export TRUFFLEHOG_MAX_TIMEOUT=3600          # 1 hour maximum
export TRUFFLEHOG_MAX_RETRIES=2             # Number of retry attempts

# Git operation timeout (in seconds)
export GIT_OPERATION_TIMEOUT=300            # 5 minutes for git operations

# Repository size thresholds (in MB)
export LARGE_REPO_THRESHOLD=500             # Consider repo "large" if > 500MB
export MEDIUM_REPO_THRESHOLD=100            # Consider repo "medium" if > 100MB

# Commit count thresholds
export LARGE_COMMIT_COUNT=200               # Many commits threshold
export MEDIUM_COMMIT_COUNT=50               # Medium commits threshold

# TruffleHog concurrency settings
export TRUFFLEHOG_MAX_CONCURRENCY=8         # Max concurrent TruffleHog processes
export TRUFFLEHOG_MIN_CONCURRENCY=2         # Min concurrent TruffleHog processes

# Performance multipliers for timeout calculation
export SIZE_TIMEOUT_MULTIPLIER=1.5          # Multiply timeout by this for large repos
export COMMIT_TIMEOUT_MULTIPLIER=2.0        # Multiply timeout by this for many commits

# Skip repositories that are too large (0 = no limit)
export SKIP_REPO_SIZE_LIMIT_MB=0            # Skip repos larger than this (MB)

# Enable/disable features
export ENABLE_ADAPTIVE_TIMEOUT=true         # Enable intelligent timeout estimation
export ENABLE_RETRY_ON_TIMEOUT=true         # Enable retry with longer timeout
export ENABLE_SIZE_OPTIMIZATION=true        # Enable repository size-based optimization